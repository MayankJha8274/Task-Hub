<!-- Filter Dropdown -->
<div class="mb-3">
  <select id="filter" class="form-select w-25" onchange="filterTasks()">
    <option value="all">All Tasks</option>
    <option value="completed">Completed</option>
    <option value="pending">Pending</option>
  </select>
</div>

<!-- Add Task Form -->
<div class="card mb-4">
  <div class="card-body">
    <h4>Add New Task</h4>

    <form action="/tasks/add" method="POST" class="row g-3">

      <div class="col-md-6">
        <label class="form-label">Title</label>
        <input type="text" name="title" class="form-control" required />
      </div>

      <div class="col-md-6">
        <label class="form-label">Category</label>
        <input type="text" name="category" class="form-control" />
      </div>

      <div class="col-12">
        <label class="form-label">Description</label>
        <textarea name="description" class="form-control"></textarea>
      </div>

      <div class="col-md-6">
        <label class="form-label">Due Date</label>
        <input type="date" name="dueDate" class="form-control" />
      </div>

      <div class="col-12">
        <button class="btn btn-dark w-100">Add Task</button>
      </div>

    </form>
  </div>
</div>


<ul class="list-group" id="taskList">
  <% tasks.forEach(task => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span class="<%= task.completed ? 'text-decoration-line-through text-muted' : '' %>">
        <%= task.title %>
      </span>

      <div class="btn-group">
        <% if (!task.completed) { %>
          <button class="btn btn-sm btn-success" onclick="completeTask('<%= task._id %>')">âœ” Done</button>
        <% } %>

        <button class="btn btn-sm btn-danger" onclick="deleteTask('<%= task._id %>')">ðŸ—‘ Delete</button>
      </div>
    </li>
  <% }) %>
</ul>

<script src="/js/dashboard.js"></script>


