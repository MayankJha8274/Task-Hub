<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">

  <!-- NAVBAR -->
  <nav class="navbar navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">TaskHub</a>
      <div>
        <span class="text-white me-3">ðŸ‘‹ <%= user.name %></span>
        <a class="btn btn-outline-light btn-sm" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Your Tasks</h2>

      <div class="d-flex gap-2 align-items-center">
        <!-- Category filter -->
        <select id="categoryFilter" class="form-select me-2" style="width:200px" onchange="applyFilters()">
          <% categories.forEach(cat => { %>
            <option value="<%= cat %>" <%= selectedCategory === cat ? 'selected' : '' %>><%= cat === 'all' ? 'All Categories' : cat %></option>
          <% }) %>
        </select>

        <!-- Sort select -->
        <select id="sortFilter" class="form-select" style="width:180px" onchange="applyFilters()">
          <option value="created_desc" <%= selectedSort === 'created_desc' ? 'selected' : '' %>>Newest</option>
          <option value="due_asc" <%= selectedSort === 'due_asc' ? 'selected' : '' %>>Due Date â†‘</option>
          <option value="due_desc" <%= selectedSort === 'due_desc' ? 'selected' : '' %>>Due Date â†“</option>
        </select>
      </div>
    </div>

    <!-- Add Task Form -->
    <div class="card mb-4">
      <div class="card-body">
        <form action="/tasks/add" method="POST" class="row g-2">
          <div class="col-sm-5">
            <input type="text" name="title" class="form-control" placeholder="Task title" required>
          </div>
          <div class="col-sm-3">
            <input type="text" name="category" class="form-control" placeholder="Category (e.g. Work)">
          </div>
          <div class="col-sm-2">
            <input type="date" name="dueDate" class="form-control">
          </div>
          <div class="col-sm-2">
            <button class="btn btn-dark w-100">Add Task</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Task cards -->
    <div class="row g-3" id="taskContainer">
      <% if (tasks.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info">No tasks found.</div>
        </div>
      <% } %>

      <% tasks.forEach(task => { %>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body d-flex justify-content-between align-items-start">
              <div>
                <h5 class="card-title mb-1 <%= task.completed ? 'text-decoration-line-through text-muted' : '' %>"><%= task.title %></h5>

                <% if (task.category) { %>
                  <span class="badge bg-primary me-2"><%= task.category %></span>
                <% } %>

                <% if (task.dueDate) { %>
                  <small class="text-muted">Due: <%= new Date(task.dueDate).toLocaleDateString() %></small>
                <% } %>

                <% if (task.description) { %>
                  <p class="mt-2 mb-0"><%= task.description %></p>
                <% } %>
              </div>

              <div class="btn-group-vertical">
                <% if (!task.completed) { %>
                  <form action="/tasks/<%= task._id %>/update" method="POST" class="mb-1">
                    <input type="hidden" name="completed" value="true">
                    <button class="btn btn-sm btn-success" type="submit">âœ”</button>
                  </form>
                <% } else { %>
                  <button class="btn btn-sm btn-outline-success mb-1" disabled>âœ”</button>
                <% } %>

                <form action="/tasks/<%= task._id %>/delete" method="POST">
                  <button class="btn btn-sm btn-danger" type="submit">ðŸ—‘</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script>
    // apply filter by reloading dashboard with query params
    function applyFilters() {
      const cat = document.getElementById('categoryFilter').value;
      const sort = document.getElementById('sortFilter').value;
      const q = new URLSearchParams();
      if (cat && cat !== 'all') q.set('category', cat);
      if (sort) q.set('sort', sort);
      window.location = '/dashboard' + (q.toString() ? ('?' + q.toString()) : '');
    }
  </script>

</body>
</html>

