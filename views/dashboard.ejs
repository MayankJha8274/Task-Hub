<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">

  <!-- NAVBAR -->
  <nav class="navbar navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">TaskHub</a>
      <div>
        <span class="text-white me-3">ðŸ‘‹ <%= user.name %></span>
        <a class="btn btn-outline-light btn-sm" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <h2 class="mb-3">Your Tasks</h2>

    <form action="/tasks/add" method="POST" class="mb-4">
      <div class="input-group">
        <input type="text" name="title" class="form-control" placeholder="New Task..." required />
        <button class="btn btn-dark">Add</button>
      </div>
    </form>

    <ul class="list-group">
      <% if (tasks.length === 0) { %>
        <li class="list-group-item">No tasks yet.</li>
      <% } %>

      <% tasks.forEach(task => { %>
        <li class="list-group-item d-flex justify-content-between">
          <span><%= task.title %></span>

          <form action="/tasks/<%= task._id %>/delete" method="POST">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>

</body>
</html>

